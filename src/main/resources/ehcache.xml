<ehcache>
    <diskStore path="java.io.tmpdir"/>
    <defaultCache
        maxElementsInMemory="1000"
        eternal="true"
        timeToIdleSeconds="120"
        timeToLiveSeconds="120"
        overflowToDisk="true"
        diskPersistent="false"
        diskExpiryThreadIntervalSeconds="120"
        memoryStoreEvictionPolicy="LRU"/>
    
    <cache name="Users"
        maxElementsInMemory="500"
        eternal="true"
        overflowToDisk="false"/>

    <cache name="BidderCategory"
        maxElementsInMemory="500"
        eternal="true"
        overflowToDisk="false"/>

    <cache name="Category"
        maxElementsInMemory="50"
        eternal="true"
        overflowToDisk="false"/>

    <cache name="ItemLot"
        maxElementsInMemory="800"
        eternal="true"
        overflowToDisk="false"/>

    <cache name="LotsStatus"
        maxElementsInMemory="50"
        eternal="true"
        overflowToDisk="false"/>

    <cache name="BidSequence"
        maxElementsInMemory="500"
        eternal="true"
        overflowToDisk="false"/>

    <cache name="Auction"
        maxElementsInMemory="50"
        eternal="true"
        overflowToDisk="false"/>
        
    <cache name="UserDetails"
        maxElementsInMemory="50"
        eternal="true"
        overflowToDisk="false"/>         
        <cache
     name="org.hibernate.cache.StandardQueryCache"
     maxElementsInMemory="50"
     eternal="false"
     timeToLiveSeconds="120"
     overflowToDisk="true"/>
 <cache
     name="org.hibernate.cache.UpdateTimestampsCache"
     maxElementsInMemory="5000"
     eternal="true"
     overflowToDisk="true"/>
 
</ehcache>
